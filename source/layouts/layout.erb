<!doctype html>
<!--<html class="no-js">-->
<html>
  <head>
    <meta charset="utf-8">
  
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Rebecca Edwards | <%= data.page.title || "Front End Developer" %></title>
    
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag "all" %>
  </head>
  
  <body class="paused">
    <header>
      <h1>Rebecca Edwards</h1>
      <div class="animated">
        <!--<audio autoplay>-->
        <audio>
          <source src="/audio/giorgetti.mp3" type='audio/mpeg;codecs="mp3"'>
          <source src="/audio/giorgetti.ogg" type='audio/ogg;codecs="vorbis"'>
        </audio>
        <p id="play">Play animation</p>
      </div>
      <div class="non-animated">
        <!-- add message here -->

      </div>
    </header>

    <%= yield %>

    <footer>
      <div class="animated">
        <p>CSS3 animation by Rebecca Edwards</p>
        <p>Music by <a href="http://www.danielgiorgetti.com" target="_blank">Daniel Giorgetti</a></p>
      </div>

    </footer>
  </body>
</html>